<Window x:Class="DevToolVault.Features.Start.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DevToolVault"
        Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FFEEEEEE">
    <DockPanel>
        <!-- Menu superior -->
        <Menu DockPanel.Dock="Top" Background="#FF2D2D30" Foreground="White" FontWeight="Bold" FontSize="14">
            <MenuItem Header="_Arquivo">
                <MenuItem Header="Selecionar Tipo de Projeto" Click="MenuSelecionarTipoProjeto_Click" />
                <Separator />
                <MenuItem Name="menuFiltroAtual" Header="Filtro Atual: Padrão" IsEnabled="False" FontWeight="Normal" Foreground="#FFCCCCCC" />
            </MenuItem>
            <MenuItem Header="_Filtros">
                <MenuItem Header="Gerenciar Filtros" Click="MenuGerenciarFiltros_Click" />
                <Separator />
                <MenuItem Header="Recarregar Filtros" Click="MenuRecarregarFiltros_Click" />
            </MenuItem>
            <MenuItem Header="_Estrutura">
                <MenuItem Header="Visualizar Estrutura" Click="MenuVisualizarEstrutura_Click" />
            </MenuItem>
            <MenuItem Header="_Exportar">
                <MenuItem Header="Exportar Código" Click="MenuExportarCodigo_Click" />
            </MenuItem>
        </Menu>

        <!-- Conteúdo principal -->
        <Border Background="White" CornerRadius="5" Margin="20" Padding="20" DockPanel.Dock="Bottom">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Título -->
                <TextBlock Grid.Row="0" Text="Bem-vindo ao DevToolVault" FontSize="24" FontWeight="Bold" Foreground="#FF2D2D30" Margin="0,0,0,20" />

                <!-- Cards de funcionalidades -->
                <WrapPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Card 1: Estrutura de Pastas -->
                    <Border Background="#FFF0F0F0" CornerRadius="10" Padding="15" Margin="10" Width="250" Height="200">
                        <StackPanel>
                            <TextBlock Text="📁" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10" />
                            <TextBlock Text="Estrutura de Pastas" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" />
                            <TextBlock Text="Visualize e exporte a estrutura de diretórios do seu projeto." FontSize="12" TextWrapping="Wrap" Foreground="#FF555555" />
                            <Button Content="Abrir" Margin="0,15,0,0" HorizontalAlignment="Left"
                                    Background="#FF2D2D30" Foreground="White" FontWeight="Bold"
                                    Padding="10,5" Click="BtnEstrutura_Click" />
                        </StackPanel>
                    </Border>

                    <!-- Card 2: Exportar Código -->
                    <Border Background="#FFF0F0F0" CornerRadius="10" Padding="15" Margin="10" Width="250" Height="200">
                        <StackPanel>
                            <TextBlock Text="📦" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10" />
                            <TextBlock Text="Exportar Código" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" />
                            <TextBlock Text="Exporte seu código-fonte para diversos formatos (TXT, MD, PDF, ZIP)." FontSize="12" TextWrapping="Wrap" Foreground="#FF555555" />
                            <Button Content="Abrir" Margin="0,15,0,0" HorizontalAlignment="Left"
                                    Background="#FF2D2D30" Foreground="White" FontWeight="Bold"
                                    Padding="10,5" Click="BtnExportar_Click" />
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </Grid>
        </Border>
    </DockPanel>
</Window>