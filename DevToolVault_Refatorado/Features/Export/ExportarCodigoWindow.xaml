<!-- DevToolVault_Refatorado/Features/Export/ExportarCodigoWindow.xaml -->
<Window x:Class="DevToolVault.Features.Export.ExportarCodigoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevToolVault"
        xmlns:controls="clr-namespace:DevToolVault.Controls"
        xmlns:converters="clr-namespace:DevToolVault.Converters"
        mc:Ignorable="d"
        Title="Exportar Código" Height="600" Width="900">
    <Window.Resources>
        <!-- Se InverseBooleanConverter estiver registrado globalmente em App.xaml, isso pode ser removido -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Para a barra de progresso -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Controles de caminho e botões -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,5">
            <TextBox x:Name="txtFolderPath" Text="{Binding CurrentPath}" IsReadOnly="True" Width="200" Margin="0,0,5,0"/>
            <Button Content="Selecionar Pasta" Command="{Binding SelectFolderCommand}" Width="120"/>
        </StackPanel>

        <!-- Controles da árvore -->
        <GroupBox Grid.Row="1" Grid.Column="0" Header="Estrutura de Arquivos">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                    <!-- Botões que o code-behind manipulará -->
                    <Button Content="Expandir Todos" Click="BtnExpandAll_Click" Margin="0,0,5,0"/>
                    <Button Content="Recolher Todos" Click="BtnCollapseAll_Click" Margin="0,0,5,0"/>
                    <CheckBox Name="chkSelectAll" Content="Selecionar Todos" Checked="ChkSelectAll_Checked" Unchecked="ChkSelectAll_Unchecked"/>
                </StackPanel>
                <!-- FileSystemTreeView com x:Name correto -->
                <controls:FileSystemTreeView x:Name="fileTreeView" Grid.Row="1" Items="{Binding FileSystemItems}" />
            </Grid>
        </GroupBox>

        <!-- Controles de exportação -->
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button Content="Exportar como Texto" Command="{Binding ExportTextCommand}" Width="150" Margin="5,0"/>
            <Button Content="Exportar como PDF" Command="{Binding ExportPdfCommand}" Width="150" Margin="5,0"/>
            <Button Content="Exportar como ZIP" Command="{Binding ExportZipCommand}" Width="150" Margin="5,0"/>
        </StackPanel>

        <!-- Indicador de carregamento -->
        <ProgressBar Grid.Row="3" Grid.Column="0" IsIndeterminate="True" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Height="20" Margin="0,5"/>
    </Grid>
</Window>