<!-- Features/Export/ExportarCodigoWindow.xaml -->
<Window x:Class="DevToolVault.Features.Export.ExportarCodigoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:DevToolVault.Controls"
        Title="Exportar Código"
        Height="600" Width="900"
        MinWidth="700" MinHeight="500">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="233*"/>
            <ColumnDefinition Width="647*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Linha 1: Caminho e botão Buscar -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.ColumnSpan="2">
            <TextBox x:Name="txtFolderPath" Width="500" Height="25" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <Button x:Name="btnBrowse" Content="Buscar..." Width="80" Click="BtnBrowse_Click"/>
            <Button x:Name="btnSelectProjectType" Content="Selecionar Tipo de Projeto" Width="150" Margin="20,0,10,0" Click="BtnSelectProjectType_Click"/>
            <TextBlock x:Name="txtCurrentProfile" Text="Perfil atual: Não selecionado" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Linha 2: TreeView de arquivos -->
        <controls:FileSystemTreeView Grid.Row="1" x:Name="fileTreeView" Margin="0,5,0,5" Grid.ColumnSpan="2"/>

        <!-- Linha 3: Botões de ação -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Grid.Column="1">
            <TextBlock Text="Formato:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="cmbExportFormat" Width="120" Margin="0,0,10,0">
                <ComboBoxItem Content="Texto (.txt)"/>
                <ComboBoxItem Content="Markdown (.md)"/>
                <ComboBoxItem Content="PDF (.pdf)"/>
                <ComboBoxItem Content="ZIP (.zip)"/>
            </ComboBox>
            <Button x:Name="btnPreview" Content="Visualizar Seleção" Width="120" Margin="5,0" Click="BtnPreview_Click"/>
            <Button x:Name="btnExport" Content="Exportar Selecionados" Width="140" Margin="5,0" Click="BtnExport_Click"/>
        </StackPanel>
    </Grid>
</Window>