<Window x:Class="DevToolVault.Features.Export.ExportarCodigoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevToolVault.Features.Export"
        xmlns:controls="clr-namespace:DevToolVault.Controls"
        mc:Ignorable="d"
        Title="Exportar Código" Height="600" Width="900">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Caminho da pasta -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
            <TextBox Text="{Binding CurrentPath}" IsReadOnly="True" Width="300" Margin="0,0,5,0"/>
            <Button Content="Selecionar Pasta" Command="{Binding SelectFolderCommand}" Width="120"/>
        </StackPanel>

        <!-- Árvore de arquivos -->
        <GroupBox Grid.Row="1" Header="Estrutura de Arquivos">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="Expandir Todos" Command="{Binding ExpandAllCommand}" Margin="0,0,5,0"/>
                    <Button Content="Recolher Todos" Command="{Binding CollapseAllCommand}" Margin="0,0,5,0"/>
                    <CheckBox Content="Selecionar Todos" IsChecked="{Binding SelectAll, Mode=TwoWay}"/>
                </StackPanel>

                <controls:FileSystemTreeView x:Name="fileTreeView" Grid.Row="1" Items="{Binding FileSystemItems}" />
            </Grid>
        </GroupBox>

        <!-- Botões de exportação -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button Content="Exportar TXT" Command="{Binding ExportTextCommand}" Width="150" Margin="5,0"/>
            <Button Content="Exportar PDF" Command="{Binding ExportPdfCommand}" Width="150" Margin="5,0"/>
            <Button Content="Exportar ZIP" Command="{Binding ExportZipCommand}" Width="150" Margin="5,0"/>
        </StackPanel>

        <!-- Barra de progresso -->
        <ProgressBar Grid.Row="3" Height="20" Margin="0,5"
                     IsIndeterminate="True"
                     Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</Window>
