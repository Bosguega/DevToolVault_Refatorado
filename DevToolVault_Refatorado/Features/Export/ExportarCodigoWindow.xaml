<Window x:Class="DevToolVault.Features.Export.ExportarCodigoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevToolVault"
        xmlns:controls="clr-namespace:DevToolVault.Controls"
        xmlns:converters="clr-namespace:DevToolVault.Converters"
        mc:Ignorable="d"
        Title="Exportar Código" Height="600" Width="800">

    <Window.Resources>
        <!-- Ensure BooleanToVisibilityConverter is available or defined elsewhere -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Make sure InverseBooleanToVisibilityConverter.cs exists and is compiled -->
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Selecionar Diretório" Click="SelectDirectoryButton_Click" Margin="0,0,10,0"/>
            <ComboBox ItemsSource="{Binding AvailableProfiles}"
                      SelectedItem="{Binding ActiveProfile}"
                      SelectionChanged="FilterSelectionChanged"
                      Width="200"/>
            <TextBlock Text="{Binding CurrentPath}" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Loading Indicator -->
        <!-- Note: The Visibility binding assumes IsLoading=true means loading IS happening, so it should be VISIBLE -->
        <Grid Grid.Row="1" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar IsIndeterminate="True" Height="20" Width="200"/>
        </Grid>

        <!-- File Tree -->
        <!-- Note: Visibility binding hides the tree when loading IS happening -->
        <controls:FileSystemTreeView Grid.Row="1"
                                     Items="{Binding FileSystemItems}"
                                     Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

        <!-- Export Options -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <Button Content="Exportar como Texto" Command="{Binding ExportTextCommand}"/>
            <Button Content="Exportar como PDF" Command="{Binding ExportPdfCommand}" Margin="10,0,0,0"/>
            <Button Content="Exportar como ZIP" Command="{Binding ExportZipCommand}"/>
        </StackPanel>
    </Grid>
</Window>