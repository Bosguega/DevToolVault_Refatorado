<!-- Features/Filters/FilterEditWindow.xaml -->
<Window x:Class="DevToolVault.Features.Filters.FilterEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Filtro"
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nome do perfil -->
        <StackPanel Grid.Row="0" Margin="0,5">
            <Label Content="Nome do Perfil:"/>
            <TextBox x:Name="txtName" Margin="0,2"/>
        </StackPanel>

        <!-- Descrição -->
        <StackPanel Grid.Row="1" Margin="0,5">
            <Label Content="Descrição:"/>
            <TextBox x:Name="txtDescription" Margin="0,2" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>

        <!-- Botões -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnOK" Content="OK" Width="80" Margin="5,0" Click="BtnOK_Click"/>
            <Button x:Name="btnCancel" Content="Cancelar" Width="80" Margin="5,0" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>