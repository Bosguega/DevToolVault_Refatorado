<!-- Features/Filters/ProjectTypeSelectorWindow.xaml -->
<Window x:Class="DevToolVault.Features.Filters.ProjectTypeSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selecionar Tipo de Projeto"
        Height="450" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Selecione o tipo de projeto:"
                   FontSize="16" FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Lista de perfis -->
        <ListView Grid.Row="1" x:Name="lstProfiles" SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="5"
                            BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}"
                                       FontSize="14" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Description}"
                                       FontSize="12" Foreground="Gray"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Botões -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="btnOK" Content="OK" Width="80" Margin="5,0" Click="BtnOK_Click"/>
            <Button x:Name="btnCancel" Content="Cancelar" Width="80" Margin="5,0" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>