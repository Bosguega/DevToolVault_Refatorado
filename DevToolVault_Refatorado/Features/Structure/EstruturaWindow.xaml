<Window x:Class="DevToolVault.Features.Structure.EstruturaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:DevToolVault.Controls"
        Title="Estrutura de Arquivos" Height="600" Width="900">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TreeView -->
        <controls:FileSystemTreeView x:Name="fileTreeView" Grid.Row="0" Grid.Column="0"/>

        <!-- TextBox para exibir a estrutura -->
        <TextBox x:Name="txtStructure" Grid.Row="0" Grid.Column="1"
                 IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas" FontSize="12" TextWrapping="NoWrap"/>

        <!-- Botões -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button Content="Atualizar Estrutura" Width="150" Margin="5" Click="BtnUpdateStructure_Click"/>
            <Button Content="Fechar" Width="80" Margin="5" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
